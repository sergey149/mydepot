<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Your catalog</h1>

<% @products.each do |product| %>
  <div calss="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div calss="price_line">
      <span class="price"><%= number_to_currency(product.price) %></span>
    </div>
  </div>
<% end %>
